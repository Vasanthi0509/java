import java.util.*;
class Main {
    public static void main(String[] args) {
        Scanner scan=new Scanner(System.in);
        System.out.print("Enter a number:"); 
        int num=scan.nextInt();
        int rev=0;
        int rem;
        while(num>0){
        rem=num%10;
        rev=rev*10+rem;
        num=num/10;
            
        }
        System.out.println("The reverse number is:"+rev);
        
    }
}
