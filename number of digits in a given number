import java.util.*;
class Main {
    public static void main(String[] args) {
        Scanner scan=new Scanner(System.in);
        int count=0;
        System.out.print("Enter the number:");
        int num=scan.nextInt();
        while(num>0){
            num=num/10;
            count=count+1;
            
        }
        System.out.println("The number of digits in a given number is "+count);
    }
}
